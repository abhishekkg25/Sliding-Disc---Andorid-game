<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sliding_disc.masterabhig.slidingdisc.GameMenu_brain">

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/roundbuttons"
        android:fontFamily="@font/aclonica"
        android:padding="15dp"
        android:text="Begin Game"
        android:onClick="Brain_game"/>

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:layout_below="@+id/button7"
        android:layout_marginTop="37dp"
        android:background="@drawable/roundbuttons"
        android:fontFamily="@font/aclonica"
        android:padding="15dp"
        android:text="Score-Card" />

    <Button
        android:id="@+id/button12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button11"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button11"
        android:text="introduction"
        android:onClick="brain_introduction"
        android:background="@drawable/coloredbuttons"/>
</RelativeLayout>
