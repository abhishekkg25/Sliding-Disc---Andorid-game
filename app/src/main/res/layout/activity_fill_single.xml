<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/Relative_fill_single"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/main_wallpaper"
tools:context="com.sliding_disc.masterabhig.slidingdisc.Fill_single">


<TextView
    android:id="@+id/textView40"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:text="Enter your details:"
    android:textColor="#ff0000"
    android:textSize="40dp"
    android:fontFamily="cursive"
    android:padding="5dp"/>

<TextView
    android:id="@+id/textView50"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textView40"
    android:fontFamily="cursive"
    android:padding="5dp"
    android:paddingLeft="5dp"
    android:text="Player:"
    android:textColor="#00ff00"
    android:layout_marginBottom="2dp"
    android:textSize="40dp"
    android:background="@drawable/border_textbox"/>

<EditText
    android:id="@+id/editText10"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textView50"
    android:ems="10"
    android:padding="5dp"
    android:inputType="textPersonName"
    android:hint="Name"
    android:textSize="20dp"
    android:fontFamily="cursive"
    android:background="@drawable/round_textboxs"/>

<Spinner
    android:id="@+id/spinner10"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/editText10"
    android:padding="5dp"
    android:layout_marginTop="11dp"
    android:background="@drawable/round_textboxs" />



<TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/spinner10"
    android:layout_marginTop="11dp"
    android:fontFamily="cursive"
    android:padding="5dp"
    android:text="Series:"
    android:background="@drawable/border_textbox"
    android:paddingLeft="5dp"
    android:textColor="#00ff00"
    android:textSize="40dp" />

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/textView6"
    android:layout_alignParentRight="true"
    android:layout_alignRight="@+id/textView6"
    android:layout_alignTop="@+id/textView7"
    android:layout_marginTop="12dp"
    android:id="@+id/radioGroup1"

    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/radioButton41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1"
        android:background="#A8A8A8"
        android:textColor="#ff0000"
        android:textSize="30dp" />

    <RadioButton
        android:id="@+id/radioButton51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="3"
        android:background="#A8A8A8"
        android:textColor="#ff0000"
        android:textSize="30dp" />

    <RadioButton
        android:id="@+id/radioButton61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="5"
        android:background="#A8A8A8"
        android:textColor="#ff0000"
        android:textSize="30dp"/>
</RadioGroup>

<Button
    android:id="@+id/button51"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:text="Proceed"
    android:background="@drawable/roundbuttons"/>


</RelativeLayout>
