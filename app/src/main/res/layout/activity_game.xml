<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_game"
    android:background="#000000"
    tools:context="com.sliding_disc.masterabhig.slidingdisc.Game">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:fontFamily="cursive"
            android:textColor="#ff0000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/Oky"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:text="Next"
                android:background="@drawable/roundbuttons"
                android:onClick="Play_again"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exits"
                android:text="Exit"
                android:padding="2dp"
                android:background="@drawable/roundbuttons"
                android:onClick="Exitt"
                />
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/grid2"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="32dp"
            android:alpha="0"
            android:tag="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="34dp"
            android:alpha="0"
            android:tag="1"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_margin="30dp"
            android:alpha="0"
            android:tag="2"
            app:srcCompat="@drawable/red" />
        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:alpha="0"
            android:layout_row="1"
            android:tag="3"
            android:layout_margin="22dp"
            app:srcCompat="@drawable/red" />
        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="28dp"
            android:tag="4"
            android:alpha="0"
            app:srcCompat="@drawable/red" />
        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_margin="27dp"
            android:alpha="0"
            android:tag="5"
            app:srcCompat="@drawable/red" />
        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="24dp"
            android:layout_row="2"
            android:alpha="0"
            android:tag="6"
            app:srcCompat="@drawable/red" />
        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_margin="24.5dp"
            android:alpha="0"
            android:tag="7"
            app:srcCompat="@drawable/red" />
        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:alpha="0"
            android:tag="8"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="17dp"
            app:srcCompat="@drawable/red" />
    </GridLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_textbox"
        android:fontFamily="Casual"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="1st Player turn"
        android:textColor="#3062CD"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gridLayout"
        android:fontFamily="casual"
        android:text=""
        android:paddingLeft="5dp"
        android:background="@drawable/border_textbox"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>
